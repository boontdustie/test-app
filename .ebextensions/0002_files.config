Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["garrettk-subpop-eb-config-policy"]
          roleName: "aws-elasticbeanstalk-ec2-role"

files:
  "/tmp/application.yml":
    mode: "000644"
    owner: webapp
    group: webapp
    authentication: "S3Auth"
    source: https://s3-us-west-2.amazonaws.com/garrettk-subpop-eb-config/application.yml

  # Move files into the rails directory after initial setup
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/0003_config_file.sh":
    owner: root
    group: root
    mode: "000755"
    content: |
      #! /bin/bash
      # TEST
      EB_APP_DEPLOY_DIR=$(/opt/elasticbeanstalk/bin/get-config container -k app_deploy_dir)
      mv /tmp/application.yml $EB_APP_DEPLOY_DIR/config/application.yml